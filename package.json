{
  "name": "ts-flattered",
  "version": "0.2.2",
  "author": {
    "name": "Max Scopp",
    "email": "me@maxscopp.de"
  },
  "license": "MIT",
  "keywords": [
    "typescript",
    "ast",
    "code-generation",
    "dsl",
    "metaprogramming",
    "compiler",
    "transformer",
    "build-tools",
    "codegen"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/max-scopp/ts-flattered.git"
  },
  "homepage": "https://github.com/max-scopp/ts-flattered#readme",
  "description": "Readable ASTs, flatter code. A lightweight TypeScript DSL for AST construction and code generation",
  "bugs": {
    "url": "https://github.com/max-scopp/ts-flattered/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/ts-flattered.js",
  "module": "dist/ts-flattered.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/ts-flattered.js",
      "default": "./dist/ts-flattered.js"
    }
  },
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/bun": "latest"
  },
  "files": [
    "dist",
    "banner.webp"
  ],
  "optionalDependencies": {
    "ts-morph": "^26.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.9.2"
  },
  "scripts": {
    "build": "bun run clean && bun run build:types && bun run build:js",
    "build:types": "tsc",
    "build:js": "bun build src/index.ts --outfile dist/ts-flattered.js --external typescript --target bun --format esm --minify",
    "dev": "bun build src/index.ts --outfile dist/ts-flattered.js --watch --external typescript --target bun --format esm",
    "clean": "rm -rf dist",
    "prebuild": "mkdir -p dist"
  }
}
